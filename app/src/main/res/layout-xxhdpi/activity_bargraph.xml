<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BarActivity"
        android:background="@color/darkBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

        <com.github.mikephil.charting.charts.BarChart
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:id="@+id/bar1"
                android:layout_marginEnd="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                android:layout_marginTop="140dp"
                >

        </com.github.mikephil.charting.charts.BarChart>

        <com.github.mikephil.charting.charts.BarChart
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:id="@+id/bar2"
                app:layout_constraintTop_toBottomOf="@+id/bar1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="100dp"
                />

        <com.github.mikephil.charting.charts.BarChart
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:id="@+id/bar3"
                app:layout_constraintTop_toBottomOf="@+id/bar2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="100dp"
                >

        </com.github.mikephil.charting.charts.BarChart>


        <com.github.mikephil.charting.charts.BarChart
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:id="@+id/bar4"
                app:layout_constraintTop_toBottomOf="@+id/bar3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="50dp"
                >

        </com.github.mikephil.charting.charts.BarChart>

        <TextView
                android:text="@string/coronvirus_graphical_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/hashedbrowns"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="@string/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/line1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="80dp"
                />

        <TextView
                android:text="@string/total_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:fontFamily="@font/cambo"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/line1"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@+id/textView26"
                app:layout_constraintVertical_bias="0.51"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="80dp"
                />

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                app:layout_constraintGuide_percent="0.04"

                android:orientation="horizontal"
                />

        <TextView
                android:text="@string/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:textColor="@color/lGray"
                android:fontFamily="@font/cambo"
                app:layout_constraintTop_toBottomOf="@+id/textView25"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="@string/india"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:textColor="@color/lighterBlue"
                android:fontFamily="@font/holden_medium"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView34"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="(official + unofficial Data)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView44"
                android:textSize="9sp"
                android:textColor="@color/lighterRed"
                app:layout_constraintTop_toBottomOf="@+id/textView35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                />

        <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/button4"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintStart_toEndOf="@+id/textView35"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/line1"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>